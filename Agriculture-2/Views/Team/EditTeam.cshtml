@model EntitiyLayer.Models.Team
@{
    ViewData["Title"] = "EditTeam";
    Layout = "~/Views/Shared/LTE_Admin.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Personel Bilgi Güncelleme</h4>
            <form class="forms-sample" method="post">
                @* method post olunca çalışacak *@
                <div class="form-group">
                    @Html.HiddenFor(x=>x.TeamID)
                    <label for="exampleInputName1">Adı Soyadı</label>
                    <span asp-validation-for="PersonName" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Ad Soyad"
                           asp-for="PersonName"> @* asp-for önemli database de eklenecek yer *@
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görev</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Görev"
                           asp-for="Title">
                </div>
                <div class="form-group">
                    <label for="exampleInputUrl1">Görsel Yolu</label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputUrl1" placeholder="Görsel Yolu"
                           asp-for="ImageUrl">  @* id önemli label for kim için demek *@
                </div>
                <div class="form-group">
                    <label for="exampleInputUrlf">Facebook</label>
                    <input type="text" class="form-control" id="exampleInputUrlf" placeholder="Facebook"
                           asp-for="FacebookUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputUrli">Instagram</label>
                    <input type="text" class="form-control" id="exampleInputUrli" placeholder="Instagram"
                           asp-for="InstagramUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputUrlw">Web Site</label>
                    <input type="text" class="form-control" id="exampleInputUrlw" placeholder="Web Site"
                           asp-for="WebsiteUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputUrlt">Twitter</label>
                    <input type="text" class="form-control" id="exampleInputUrlt" placeholder="Twitter"
                           asp-for="TwitterUrl">
                </div>


                <button type="submit" class="btn btn-primary me-2">Güncelle</button>

            </form>
        </div>
    </div>
</div>

