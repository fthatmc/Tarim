@using EntitiyLayer.Models
@model List<Contact>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/LTE_Admin.cshtml";
}

<br />
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj Listesi</h4>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Sıra No</th>
                            <th>Ad Soyad</th>
                            <th>Mail</th>
                            <th>Tarih</th>
                            <th>Mesajı Gör</th>

                        </tr>
                    </thead>
                    <tbody>
                        @{int sirano = 0;}
                        @foreach (var x in Model)
                        {

                            <tr>
                                <td>@{sirano++;} @sirano</td>
                                <td>@x.Name </td>
                                <td>@x.Mail</td>
                                <td>@x.Date.ToShortDateString()</td>
                                <td><a href="/Contact/MessageDetails/@x.ContactID" class="btn btn-outline-info">Mesaj Detayı</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>








