@using EntitiyLayer.Models
@model List<Address>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/LTE_Admin.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Personel Listesi</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Sıra No</th>
                            <th>Açıklama-1</th>
                            <th>Açıklama-2</th>
                            <th>Açıklama-3</th>
                            <th>Açıklama-4</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int sirano = 0;}
                        @foreach (var x in Model)
                        {
                            <tr>
                                
                                <td>@{sirano++;} @sirano</td>
                                <td>@x.Description1</td>
                                <td>@x.Description2</td>
                                <td>@x.Description3</td>
                                <td>@x.Description4</td>
                                <td><a href="/Address/EditAddress/@x.AddressID" class="btn btn-outline-warning">Düzenle</a></td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



