@using EntitiyLayer.Models
@model List<Announcemenet>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/LTE_Admin.cshtml";
}


<br />
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Listesi</h4>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Sıra No</th>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                            <th>Durum</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int sirano = 0;
                        }
                        @foreach (var x in Model)
                        {

                            <tr>
                                <td>@{
                                        sirano++;
                                    } @sirano</td>
                                <td>@x.Title </td>
                                <td>@x.Description</td>
                                <td>@x.Date.ToShortDateString()</td>
                                <td><a href="/Announcement/DeleteAnnouncement/@x.AnnouncementID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Announcement/EditAnnouncement/@x.AnnouncementID" class="btn btn-outline-warning">Düzenle</a></td>
                                @if (x.Status == true)
                                {
                                    <td><a href="/Announcement/ChangesStatusToFalse/@x.AnnouncementID" class="btn btn-outline-info">Pasif Yap</a></td>
                                }
                                else
                                {
                                    <td><a href="/Announcement/ChangesStatusToTrue/@x.AnnouncementID" class="btn btn-outline-success">Aktif Yap</a></td>
                                }
                                
                                
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Announcement/AddAnnouncement/" class="btn btn-success">Yeni Duyuru Ekle</a>
            </div>
        </div>
    </div>
</div>






