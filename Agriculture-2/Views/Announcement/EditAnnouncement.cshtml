@model EntitiyLayer.Models.Announcemenet

@{
    ViewData["Title"] = "EditAnnouncement";
    Layout = "~/Views/Shared/LTE_Admin.cshtml";
}




<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Güncelleme Sayfası</h4>
            <form class="forms-sample" method="post">
                @* method post olunca çalışacak *@
                @Html.HiddenFor(x=>x.AnnouncementID)
                <div class="form-group">
                    <label>Başlık</label>
                    <input type="text" class="form-control" placeholder="Başlık Giriniz" asp-for="Title">
                    @* asp-for önemli database de eklenecek yer *@
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea cols="30" rows="5" class="form-control" placeholder="Açıklama Giriniz" asp-for="Description"></textarea>
                </div>
                <div class="form-group">
                    <label>Tarih</label>
                    <input type="date" class="form-control" placeholder="Başlık Giriniz" asp-for="Date">
                    @* asp-for önemli database de eklenecek yer *@
                </div>
                <button type="submit" class="btn btn-primary me-2">Güncelle</button>

            </form>
        </div>
    </div>
</div>



