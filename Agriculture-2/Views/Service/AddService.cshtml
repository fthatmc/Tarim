@model Agriculture_2.Models.ServiceAddViewModel

@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/LTE_Admin.cshtml";
}


@* EntitiyLayer.Models.Service normalde bu ama  *@
@* data annotation yaptığımız için ServiceAddViewModel bu sınıfı kullanmamız lazım *@


<br />
<h3>Add Service</h3>
<br />

<form class="form-group" method="post">
    <div class="form form-group">
        @Html.Label("Başlık")
        <span asp-validation-for="Title" class="text-danger"></span>
        <input type="text" asp-for="Title" class="form-control" />
    </div>
    <div class="form form-group">
        @Html.Label("Görsel Url")
        <span asp-validation-for="Image" class="text-danger"></span>
        <input type="text" asp-for="Image" class="form-control" />
    </div>
    <div class="form form-group">
        @Html.Label("Açıklama")
        <span asp-validation-for="Description" class="text-danger"></span>
        <input type="text" asp-for="Description" class="form-control" />
    </div>

    <button class="btn btn-outline-info">Kaydet</button>
</form>