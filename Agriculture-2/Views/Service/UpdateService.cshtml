 @model EntitiyLayer.Models.Service

@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h3>Update Service</h3>
<br />

<form class="form-group" method="post">
    @Html.HiddenFor(x=>x.ServiceID)

    <div class="form form-group">
        @Html.Label("Başlık")
        
        <input type="text" asp-for="Title" class="form-control" />
    </div>
    <div class="form form-group">
        @Html.Label("Görsel Url")
        
        <input type="text" asp-for="Image" class="form-control" />
    </div>
    <div class="form form-group">
        @Html.Label("Açıklama")
        
        <input type="text" asp-for="Description" class="form-control" />
    </div>

    <button class="btn btn-outline-info">Güncelle</button>
</form>

