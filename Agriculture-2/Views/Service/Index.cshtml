@using EntitiyLayer.Models
@model List<Service>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/LTE_Admin.cshtml";
}


<br />
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmet Listesi</h4>
            
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Sıra No</th>
                            <th>Başlık</th>
                            <th>Açıklma</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                     @{int sirano = 0; }
                    @foreach(var x in Model)
                    {
                        
                            <tr>
                                <td>@{sirano++;} @sirano</td>
                                <td>@x.Title </td>
                                <td>@x.Description</td>
                                <td><a href="/Service/DeleteService/@x.ServiceID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Service/UpdateService/@x.ServiceID" class="btn btn-outline-warning">Düzenle</a></td>
                            </tr>
                    }
                    </tbody>
                </table>
                <a href="/Service/AddService/" class="btn btn-success">Yeni Hizmet Girişi</a>
            </div>
        </div>
    </div>
</div>




