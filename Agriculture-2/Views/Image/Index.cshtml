@using EntitiyLayer.Models
@model List<Image>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/LTE_Admin.cshtml";
}


<br />
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Görsel Listesi</h4>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Sıra No</th>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th>Resim Yolu</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int sirano = 0;
                        }
                        @foreach (var x in Model)
                        {

                            <tr>
                                <td>@{sirano++;} @sirano</td>
                                <td>@x.Title </td>
                                <td>@x.Description</td>
                                <td>@x.ImageUrl</td>
                                <td><a href="/Image/DeleteImage/@x.ImageID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Image/EditImage/@x.ImageID" class="btn btn-outline-warning">Düzenle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Image/AddImage/" class="btn btn-success">Yeni Resim Ekle</a>
            </div>
        </div>
    </div>
</div>








