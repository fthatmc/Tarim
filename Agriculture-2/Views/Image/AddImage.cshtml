@model EntitiyLayer.Models.Image

@{
    ViewData["Title"] = "AddImage";
    Layout = "~/Views/Shared/LTE_Admin.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Resim Kaydı</h4>
            <form class="forms-sample" method="post">
                @* method post olunca çalışacak *@
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Başlık"
                           asp-for="Title"> @* asp-for önemli database de eklenecek yer *@
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Açıklama</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <textarea cols="50" rows="4" type="text" class="form-control" id="exampleInputEmail3" placeholder="Görev"
                              asp-for="Description"></textarea>
                </div>
                <div class="form-group">
                    <label for="exampleInputUrl1">Görsel Yolu</label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputUrl1" placeholder="Görsel Yolu"
                           asp-for="ImageUrl">  @* id önemli label for kim için demek *@
                </div>

                <button type="submit" class="btn btn-primary me-2">Kaydet</button>

            </form>
        </div>
    </div>
</div>



